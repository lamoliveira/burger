<div class="container">
    <div class="text-center">
    <img src="assets\images\burger.jpg">
  </div>
  <div class="jumbotron">
    <h1 class="text-center">Eat-da-Burger!</h1>
  </div>
  <div class="row">
    <div class="text-center">
      <div class="col-sm-6 col-md-6 subpage-block">
        <h2>Burgers available!</h2>
        <ul style="list-style-type:none">
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
        </ul>
      </div>
      <div class="col-sm-6 col-md-6 subpage-block">
        <h2>Burgers devoured!</h2>
        <ul style="list-style-type:none">
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="text-center">
      <div class="col-sm-6 col-md-6 subpage-block">
        <h4>Add a new burguer you want to eat and click add</h2>
        <form class="create-form">
          <div class="form-group">
           
            <input type="text" id="ba" name="burger_name">
          </div>
          <button type="submit" style="background:darkblue;color:white">Add burger</button>
        </form>
      </div>
    </div>
  </div>
</div>